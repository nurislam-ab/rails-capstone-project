<p id="notice"><%= notice %></p>

<% page_title('Dashboard - Votes list') %>

<div class="container">
  <div class="container-header">
    <div class="title">
      <h1>Votes</h1>
    </div>
    <div class="right-block">
        
    </div>
  </div>
  
  <div class="table-wrapper">
    <table class="items-tables">
      <thead>
        <tr>
          <th>ID</th>
          <th>User</th>
          <th>Article</th>
          <th>Created at</th>
          <th>Updated at</th>
        </tr>
      </thead>
      <tbody>
        <% @votes.each do |vote| %>
            <tr>
                <td><%= vote.id %></td>
                <td><%= link_to vote.user.name, vote.user %></td>
                <td><%= link_to vote.article.title, vote.article %></td>
                <td><%= vote.created_at %></td>
                <td><%= vote.updated_at %></td>
            </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
