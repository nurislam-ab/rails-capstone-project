<h1>Editing Article</h1>

<%#= render 'form', article: @article %>

<%= form_for(@article) do |f| %>
    <%= f.label :title, "Article title" %>
    <%= f.text_field :title %>

    <%= f.label :text, "Content" %>
    <%= f.text_area :text %>

    <%= f.label :image, "Image" %>
    <%= f.text_field :image %>

    <%= f.submit 'Update post'%>
<% end %>


<%= link_to 'Show', @article %> |
