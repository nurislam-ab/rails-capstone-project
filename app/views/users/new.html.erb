<% page_title('Sign up') %>

<div class="container">
    <div class="container-header">
        <div class="title">
            <h1>Sign up</h1>
        </div>
    </div>
    
    <div class="form-container">
        <div class="form-wrapper user-form">
            <%= form_with(model: @user, local: true) do |f| %>
                <%= show_errors(@user) %>
                
                <%= f.label :name, "Name" %>
                <%= f.text_field :name, required: true %>

                <%= f.label :email, "Email" %>
                <%= f.email_field :email, required: true %>

                <%= f.submit "Sign up", class: 'add-btn blue-dark-btn' %>
            <% end %>

            <%= link_to "Log in", login_path, class: 'add-btn link-btn' %>
        </div>
    </div>
</div>
